#include <iostream>

using namespace std;

int main() //function
{
    string phrase="This is not okay";
    cout<<phrase.length();
    cout<<phrase[0]<<"\n";
    phrase[0]='b';
    cout<<phrase<<endl;
    cout<<phrase.find("not",0)<<endl;//start looking from index 0
    cout<<phrase.find("nice",0)<<endl;
    cout<<phrase.find("i",0)<<endl;
    
    return 0;
}
